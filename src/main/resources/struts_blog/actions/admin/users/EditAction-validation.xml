<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="user.email">
        <field-validator type="requiredstring">
            <message>Email is required</message>
        </field-validator>
        <field-validator type="email">
            <message>Must provide a valid email</message>
        </field-validator>
    </field>
    <field name="user.password">
        <field-validator type="requiredstring">
            <message>Password is required</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="minLength">6</param>
            <param name="trim">true</param>
            <message>You password needs to be a minimum of 6 letters</message>
        </field-validator>
        <field-validator type="expression">
            <param name="expression">user.password == user.passwordConfirm</param>
            <message>Password and Password Confirmation must match</message>
        </field-validator>
    </field>
    <field name="user.passwordConfirm">
        <field-validator type="expression">
            <param name="expression">user.password == user.passwordConfirm</param>
            <message>Password and Password Confirmation must match</message>
        </field-validator>
    </field>
</validators>
