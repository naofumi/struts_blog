<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="users" extends="struts-default" namespace="/admin/users">
        <action name="index" class="struts_blog.actions.admin.users.IndexAction">
            <result name="success">/WEB-INF/content/users/index.jsp</result>
        </action>
        <action name="show"
                class="struts_blog.actions.admin.users.ShowAction">
            <result name="success">/WEB-INF/content/users/show.jsp</result>
        </action>
        <action name="new"
                class="struts_blog.actions.admin.users.NewAction">
            <result name="success">/WEB-INF/content/users/new.jsp</result>
        </action>
    </package>

    <package name="posts" extends="struts-default" namespace="/admin/posts">
        <action name="index"
                class="struts_blog.actions.admin.posts.IndexAction">
            <result name="success">/WEB-INF/content/posts/index.jsp</result>
        </action>
        <action name="show"
                class="struts_blog.actions.admin.posts.ShowAction">
            <result name="success">/WEB-INF/content/posts/show.jsp</result>
        </action>
        <action name="new"
                class="struts_blog.actions.admin.posts.NewAction">
            <result name="success">/WEB-INF/content/posts/new.jsp</result>
        </action>
        <action name="edit"
                class="struts_blog.actions.admin.posts.EditAction">
            <result name="success">/WEB-INF/content/posts/edit.jsp</result>
        </action>
        <action name="create"
                class="struts_blog.actions.admin.posts.CreateAction">
            <!-- Need to figure out how to handle the token interceptor during testing
            -->
            <!--			<interceptor-ref name="token" />-->
            <interceptor-ref name="defaultStack" />
            <result type="redirectAction" name="success">
                <param name="namespace">/</param>
                <param name="actionName">posts</param>
                <param name="id">${post.id}</param>
            </result>
            <result name="input">/WEB-INF/content/posts/new.jsp</result>
        </action>
        <action name="update"
                class="struts_blog.actions.admin.posts.UpdateAction">
            <!--			<interceptor-ref name="token" />-->
            <interceptor-ref name="defaultStack" />
            <result type="redirectAction" name="success">
                <param name="actionName">show</param>
                <param name="id">${post.id}</param>
            </result>
        </action>
        <action name="delete" class="struts_blog.actions.admin.posts.DeleteAction">
            <!--			<interceptor-ref name="token" />-->
            <interceptor-ref name="defaultStack" />
            <result type="redirectAction" name="success">
                <param name="namespace">/</param>
                <param name="actionName">posts</param>
            </result>
        </action>
    </package>
</struts>
