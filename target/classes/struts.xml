<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="struts_blog" extends="struts-default">
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<action name="posts"
			class="struts_blog.actions.posts.IndexAction">
			<result name="success">/WEB-INF/content/posts/index.jsp</result>
		</action>

	</package>
	<package name="posts" extends="struts-default"
		namespace="/posts">

	</package>

</struts>